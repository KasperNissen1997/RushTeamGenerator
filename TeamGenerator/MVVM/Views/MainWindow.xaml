<Window x:Class="TeamGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeamGenerator"
        mc:Ignorable="d"
        Title="MainWindow" Width="1080" Height="720" MinWidth="800" MinHeight="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" MinWidth="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Label Content="Registrerede spillere:"/>
            <ListBox Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=30}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Vertical">
                                <Label Content="Navn" FontSize="10"/>
                                <Label Content="Nickname" FontSize="10"/>
                            </StackPanel>
                            <Label Content="Niveau" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="230"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="10"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Label Content="Spiller detaljer:"/>
                
                <!-- Name -->
                <Label Grid.Row="1" Content="Navn:" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="" FontSize="18" VerticalAlignment="center"/>
                
                <!-- Nickname -->
                <Label Grid.Row="3" Content="Nickname:" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="" FontSize="18" VerticalAlignment="center"/>
                
                <!-- Known languages -->
                <Label Grid.Row="5" Content="Kendte sprog:" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Grid Grid.Row="5" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <Label Content="Dansk:" FontSize="18" VerticalAlignment="Center"/>
                    <CheckBox Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <Label Grid.Column="2" Content="Engelsk:" FontSize="18" VerticalAlignment="Center"/>
                    <CheckBox Grid.Column="3" VerticalAlignment="Center"/>
                </Grid>

                    <!-- Rating -->
                <Label Grid.Row="7" Content="Niveau:" FontSize="18" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Grid Grid.Row="7" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <Slider Minimum="1" Maximum="12" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>
                    <TextBox Grid.Column="1" FontSize="18" VerticalAlignment="Center" Margin="10,0,0,0"/>
                </Grid>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Inklusioner -->
                <Label Content="Inklusioner:"/>
                
                <ListBox Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=30}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <Label Content="Navn" FontSize="10"/>
                                <Label Content="Nickname" FontSize="10"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Grid Grid.Row="3">
                    <Button Content="Tilføj" Padding="25,0,25,0" HorizontalAlignment="Left"/>
                    <Button Content="Fjern" Padding="25,0,25,0" Margin="100,0,0,0" HorizontalAlignment="Left"/>
                </Grid>

                <!-- Eksklusioner -->
                <Label Grid.Column="2" Content="Eksklusioner:"/>
                
                <ListBox Grid.Row="1" Grid.Column="2" d:ItemsSource="{d:SampleData ItemCount=30}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">
                                <Label Content="Navn" FontSize="10"/>
                                <Label Content="Nickname" FontSize="10"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Grid Grid.Row="3" Grid.Column="2">
                    <Button Content="Tilføj" Padding="25,0,25,0" HorizontalAlignment="Left"/>
                    <Button Content="Fjern" Padding="25,0,25,0" Margin="100,0,0,0" HorizontalAlignment="Left"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
