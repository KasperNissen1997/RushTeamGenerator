<Page x:Class="TeamGenerator.MVVM.Views.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TeamGenerator.MVVM.Views"
      mc:Ignorable="d" 
      Title="MainMenu" Width="1080" Height="720" MinWidth="1080" MinHeight="500">

    <Grid Background="White">
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        <Button x:Name="Bnt1" Content="TeamGen" HorizontalAlignment="Center" Margin="0,205,0,0" VerticalAlignment="Top" Background="#FFED966D" Height="50" Width="124" Click="Bnt1_Click"/>
        <Button x:Name="Bnt2" Content="Players" HorizontalAlignment="Center" Margin="0,310,0,0" VerticalAlignment="Top" Background="#FFED966D" Height="50" Width="124" Click="Bnt2_Click"/>
        <Label x:Name="Title" Content="Rush Copenhagen" HorizontalAlignment="Center" Margin="0,46,0,0" VerticalAlignment="Top" Foreground="#FFF1914D" FontSize="36" FontWeight="Bold"/>
        <Image x:Name="Logo" Margin="10,11,894,528" Source="/RushLogo.ico" Stretch="Fill"/>
        
    </Grid>
</Page>
